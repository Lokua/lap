doctype html
head
  title Lap | CSS-Controls Demo
  link(rel='stylesheet', href='style.css')
  link(rel='stylesheet', href='lap-icons/style.css')
  script(src='../../dist/lap-debug.js')
  script(src='scripts/lap-volume-range-revealer.js')
  script(src='scripts/lap-canvas-prog-seek.js')
  script(src='scripts/lap-canvas-volume-range.js')
  script(src='scripts/lap-discog-populator.js')
  script(src='scripts/script.js')
body

  header
    h1#banner Lap (Lokua Audio Player) Demos

  main#main

    section
      h1 full discography player

      .lap#full-discography-player

        .lap__details
          span.lap__artist
          span.lap__album
          span.lap__track-number
          span.lap__track-title

        .lap__controls
          .lap__control.lap__speaker__container: i.lap__speaker.lap-i-volume-high
          .lap__canvas-volume-range__container.lap--hidden: .lap__canvas-volume-range
          .lap__controls--non-volume
            .lap__control: i.lap__play-pause.lap-i-play
            .lap__control.tooltip(data-tooltip='previous track'): i.lap__prev.lap-i-prev
            .lap__control.tooltip(data-tooltip='next track'): i.lap__next.lap-i-next
            .lap__read.lap__current-time 00:00
            .lap__prog-seek__container: .lap__prog-seek
            .lap__read.lap__duration 00:00
            //- .lap__control: i.lap__playlist.lap-i-playlist
            .lap__control.tooltip(data-tooltip='previous album'): i.lap__prev-album.lap-i-prev-album
            .lap__control.tooltip(data-tooltip='show albums'): i.lap__discog.lap-i-discog
            .lap__control.tooltip(data-tooltip='next album'): i.lap__next-album.lap-i-next-album
        
        .lap__case-and-discog-container
          .lap__case
            .lap__cover__container: img.lap__cover
            .lap__playlist__panel

            .lap__discog__container
              .lap__discog__panel.lap--hidden

          //- .lap__discog__panel.lap--hidden
          //-   h3 Albums
          //-   .lap__discog__items
          //-     //- <- dynamic content
          //-   .lap__discog__nav
          //-     span.lap__control: i.lap__discog__thumb--prev.lap-i-prev-album
          //-     span.lap__discog__nav-index
          //-     span.lap__control: i.lap__discog__thumb--next.lap-i-next-album

    .divider

    section
      .sub
        h1 single track player
        .lap#single-track-player
          .lap__controls
            .lap__control.lap__speaker__container: i.lap__speaker.lap-i-volume-high
            .lap__canvas-volume-range__container.lap--hidden: .lap__canvas-volume-range
            .lap__controls--non-volume
              .lap__control: i.lap__play-pause.lap-i-play
              .lap__control: i.lap__prev.lap-i-prev
              .lap__control: i.lap__next.lap-i-next
              .lap__read.lap__current-time 00:00
              .lap__prog-seek__container: .lap__prog-seek
              .lap__read.lap__duration 00:00
